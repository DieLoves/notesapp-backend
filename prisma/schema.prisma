generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(cuid())
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  role       UserRole?  @default(USER)
  email      String     @unique
  password   String?    @default(cuid())
  username   String     @default("Unknown")
  is_active  Boolean?   @default(false) @map("isActive")
  notes      Notes[]
  sessions   Sessions[]
  mailCodes  MailCode[]
}

model MailCode {
  id      String  @id @default(cuid())
  user    User?   @relation(fields: [user_id], references: [id])
  user_id String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  code       String
  expires_at DateTime
  email      String
}

model Notes {
  id     String @id @default(cuid())
  userId String @unique @map("user_id")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  title   String
  content String

  isPrimary Boolean
  isHidden  Boolean
  user      User?   @relation(fields: [userId], references: [id])

  @@map("notes")
}

model Sessions {
  id      String  @id @default(cuid())
  user    User?   @relation(fields: [user_id], references: [id])
  user_id String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  access_token  String?
  refresh_token String
  expires_in    BigInt

  type         String? @default("Unknown")
  os_name      String? @default("Unknown")
  device_name  String? @default("Unknown")
  browser_name String? @default("Unknown")
  uagent       String? @default("Unknown")

  last_online_at DateTime? @default(now()) @map("lastOnlineAt")

  @@map("sessions")
}

enum DeviceType {
  Unknown
  console
  mobile
  tablet
  smarttv
  wearable
  embedded
}

enum UserRole {
  USER
  ADMIN
}
